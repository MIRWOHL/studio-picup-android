<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppThemeGeneral" parent="AppTheme">
        <item name="android:autoCompleteTextViewStyle">@style/purpleCursor</item>
        <item name="android:editTextStyle">@style/whiteCursor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullscreen" parent="AppThemeGeneral">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--
        <item name="android:windowFullscreen">true</item>
-->
        <item name="android:autoCompleteTextViewStyle">@style/purpleCursor</item>
        <item name="android:editTextStyle">@style/whiteCursor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">@color/darkGreen</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/lightGray</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--
    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/purple_shape</item>
    </style>
-->

    <style name="purpleCursor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/purple_shape</item>
    </style>

    <style name="whiteCursor" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/white_shape</item>
    </style>

    <style name="AppThemeFullscreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeFullscreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
