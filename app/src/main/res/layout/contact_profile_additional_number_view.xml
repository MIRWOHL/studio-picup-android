<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/phone_number_textview"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/phone_type_textview"
        android:layout_weight="5"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:text="@string/phone_number_label" />

    <TextView
        android:id="@+id/phone_type_textview"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/call_imageview"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:text="@string/phone_type_label" />

    <ImageView
        android:id="@+id/call_imageview"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_phone_purple" />

</LinearLayout>