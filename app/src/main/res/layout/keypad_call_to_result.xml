<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/duration_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="@string/fullname_label" />

    <TextView
        android:id="@+id/hyphen_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/duration_textview"
        android:text="-" />

    <TextView
        android:id="@+id/phone_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/hyphen_textView"
        android:gravity="center_vertical"
        android:text="@string/phone_number_label" />

    <TextView
        android:id="@+id/others_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/phone_type_textview"
        android:gravity="center_vertical"
        android:text=", and n others" />
</RelativeLayout>