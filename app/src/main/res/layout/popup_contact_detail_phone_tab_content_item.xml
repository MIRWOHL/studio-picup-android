<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/number_textview"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/phone_number_label"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/phone_number_label" />

    <TextView
        android:id="@+id/type_textview"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/number_textview"
        android:contentDescription="@string/phone_type_label"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/phone_type_label" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/ic_phone_purple"
        android:id="@+id/icon_imageview"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>